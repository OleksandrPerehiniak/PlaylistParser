<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:PlaylistParser.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PlaylistParser.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="PlaylistParser">

        <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto, Auto, *, Auto">
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" Spacing="10">
            <TextBox Text="{Binding UrlInput}" Width="500" Watermark="Enter Amazon Music Playlist/Album URL"/>
            <Button Command="{Binding ParseUrlCommand}">Parse URL</Button>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10,0,10,10" DataContext="{Binding ParsedPlaylist}">
            <Image Source="{Binding AvatarUrl}" Width="64" Height="64" Margin="0,0,10,0"/>
            <StackPanel Orientation="Vertical">
                <TextBlock FontWeight="Bold" FontSize="16" Text="{Binding Name}"/>
                <TextBlock FontStyle="Italic" Text="{Binding Description}"/>
            </StackPanel>
        </StackPanel>

        <ListBox Grid.Row="2" Margin="10" ItemsSource="{Binding ParsedPlaylist.Songs}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="2*, 2*, 2*, *">
                        <TextBlock Grid.Column="0" Text="{Binding SongName}" ToolTip.Tip="Song Name" />
                        <TextBlock Grid.Column="1" Text="{Binding ArtistName}" ToolTip.Tip="Artist Name" />
                        <TextBlock Grid.Column="2" Text="{Binding AlbumName}" ToolTip.Tip="Album Name" />
                        <TextBlock Grid.Column="3" Text="{Binding Duration}" ToolTip.Tip="Duration" HorizontalAlignment="Right" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBlock Grid.Row="3" Margin="10" Text="{Binding StatusMessage}" Foreground="Gray"/>
    </Grid>
</Window>
